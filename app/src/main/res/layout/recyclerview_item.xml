<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="15dp"
    android:id="@+id/parent_layout">

    <ImageView
        android:id="@+id/image_of_product"
        android:layout_width="40dp"
        android:layout_height="50dp" />

<!--    <ImageView
        android:id="@+id/backgorund_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"/>-->

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nazwa_produktu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/image_of_product"/>

    <TextView
        android:id="@+id/expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:text="data przydatnoÅ›ci"
        android:textSize="17sp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/image_of_product"/>

    <ImageButton
        android:id="@+id/delete_product_button"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_baseline_clear_34" />

</RelativeLayout>