<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/parent_layout"
    android:background="?android:attr/selectableItemBackground">


    <TextView
        android:id="@+id/product_name"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="@string/nazwa_produktu"
        android:textSize="20sp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/product_type"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"

        android:text="@string/typ_produktu"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/expiry_date"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_type"
        android:text="@string/data_przydatno_ci"
        android:textSize="17sp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="27dp" />

    <ImageButton
        android:id="@+id/delete_product_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:clickable="true"
        android:foreground="@drawable/icons8_remove_100"/>

    <ImageButton
        android:id="@+id/add_product_to_meal_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:clickable="true"
        android:visibility="gone"
        android:foreground="@drawable/icons8_plus_100" />

    <ImageButton
        android:id="@+id/delete_product_from_meal_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:background="@null"
        android:clickable="true"
        android:visibility="gone"
        android:foreground="@drawable/icons8_minus_50" />

    <ImageButton
        android:id="@+id/info_button_product"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:clickable="true"
        android:visibility="gone"
        android:foreground="@drawable/icons8_info_100" />

</RelativeLayout>