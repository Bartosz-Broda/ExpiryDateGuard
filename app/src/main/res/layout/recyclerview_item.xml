<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/parent_layout">

    <ImageView
        android:id="@+id/image_of_product"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="50dp" />

<!--    <ImageView
        android:id="@+id/backgorund_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"/>-->

    <TextView
        android:id="@+id/product_name"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:text="@string/nazwa_produktu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/image_of_product"/>

    <TextView
        android:id="@+id/product_type"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/image_of_product"
        android:text="@string/typ_produktu"

        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_type"
        android:text="@string/data_przydatno_ci"
        android:textSize="17sp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/image_of_product"/>

    <ImageButton
        android:id="@+id/delete_product_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:clickable="true"
        app:srcCompat="@drawable/ic_baseline_trashcan" />

    <ImageButton
        android:id="@+id/add_product_to_meal_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_btn_background"
        android:clickable="true"
        android:visibility="gone"
        app:srcCompat="@drawable/baseline_add_60" />

    <ImageButton
        android:id="@+id/delete_product_from_meal_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_btn_background"
        android:clickable="true"
        android:visibility="gone"
        app:srcCompat="@drawable/baseline_remove_60" />

</RelativeLayout>