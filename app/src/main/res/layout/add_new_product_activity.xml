        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:layout_marginTop="10dp"
        android:alpha="0.9"
        android:cropToPadding="false"
        android:src="@drawable/opened_fridge" />-->

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="33sp"
        android:text="Add new product"
        android:textColor="@color/black"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="30dp">

        <TextView
            android:id="@+id/textview_in_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:textSize="20sp"
            android:text="Expiration \n date"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/product_name_edittext"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""
            android:background="@drawable/edittext_bg"
            android:hint="Product name"
            android:padding="10dp"
            android:textCursorDrawable="@color/colorPrimary" />


        <EditText
            android:id="@+id/expiry_date_edittext_Day"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_name_edittext"
            android:layout_alignStart="@+id/product_name_edittext"
            android:layout_marginStart="105dp"
            android:layout_marginTop="80dp"
            android:autofillHints="."
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="DD"
            android:inputType="datetime"
            android:padding="10dp"
            android:textCursorDrawable="@color/colorPrimary" />

        <EditText
            android:id="@+id/expiry_date_edittext_Month"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_name_edittext"
            android:layout_marginStart="165dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/expiry_date_edittext_Day"
            android:autofillHints="."
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="MM"
            android:inputType="datetime"
            android:padding="10dp"
            android:textCursorDrawable="@color/colorPrimary" />

        <EditText
            android:id="@+id/expiry_date_edittext_year"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/product_name_edittext"
            android:layout_marginStart="225dp"
            android:layout_marginTop="80dp"
            android:autofillHints="."
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="YYYY"
            android:inputType="datetime"
            android:padding="10dp"
            android:textCursorDrawable="@color/colorPrimary" />

        <Button
            android:id="@+id/save_new_product_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="140dp"
            android:text="Save" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/cardview"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:text="SCAN PRODUCT" />


</RelativeLayout>
